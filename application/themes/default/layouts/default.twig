<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Title -->
  <title>{{ page_title }} | {{ site_name }}</title>

  <!-- CSS Sheets -->
  {% block stylesheets %}
    <!-- Bootstrap core -->
    <link rel="stylesheet" href="{{ css('bootstrap.min') }}">
    <!-- FontAwesome core -->
    <link rel="stylesheet" href="{{ css('font-awesome.min') }}">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="{{ css('style.dev') }}">
    <link rel="stylesheet" href="{{ css('humane-flatty') }}">
  {% endblock %}

  <!-- Custom fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,900" rel="stylesheet">

  <!-- Favicon -->
  <link rel="icon" href="assets/favicon.png" sizes="32x32" type="image/png">
</head>
<body>

{% if this.session.userdata('real_id') %}
  <div class="fixed-warning text-center">
    <span>Connecté en tant qu'utilisateur N°{{ this.session.userdata('id') }}</span><br>
    <a href="{{ route('users/admin_take_control/' ~ this.session.userdata('real_id')) }}">Quitter la prise de
      contrôle</a>
  </div>
{% endif %}
<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-custom navbar-light">
      <div class="navbar-brand" href="#">
        <img src="{{ img('Banniere_Limpid.png') }}" class="img-responsive d-none d-lg-block" height="45" alt="Logo">
        <img src="{{ img('Banniere_Limpid_Light.png') }}" class="img-responsive d-lg-none" height="35" alt="Logo">
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
              aria-controls="navbarToggler" aria-expanded="false" aria-label="Navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarToggler">
        <div class="navbar-nav">
          <a class="nav-item nav-link {% if this.uri.segment(1) == '' %}active{% endif %}" href="{{ site_url() }}"><i
                    class="fa fa-home"></i>&nbsp;Accueil</a>
          <a class="nav-item nav-link disabled" title="Bientôt"><i class="fa fa-download"></i>&nbsp;Téléchargement</a>
          <a class="nav-item nav-link disabled" title="Bientôt"><i class="fa fa-cubes"></i>&nbsp;Extensions</a>
          {% if this.authManager.isLogged() %}
            <a class="nav-item nav-link {% if this.router.class == 'users' %}active{% endif %}"
               href="{{ route('users/account') }}">
              <i class="fa fa-user"></i>&nbsp;Espace membre
            </a>
          {% else %}
            <a class="nav-item nav-link {% if this.router.class == 'auth' %}active{% endif %}"
               href="{{ route('auth/login') }}">
              <i class="fa fa-unlock-alt"></i>&nbsp;Authentification
            </a>
          {% endif %}

          <a class="nav-item nav-link" href="https://discord.gg/GvUDCs2" target="_blank">
            <svg style="height: 20px;vertical-align: bottom;" viewBox="0 0 16 16"
                 xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"

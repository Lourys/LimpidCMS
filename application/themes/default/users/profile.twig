{% extends 'layouts/default.twig' %}

{% block content %}
  <section class="col-12 profile">
    <h2 class="text-center category-title col-12">{{ lang('PROFILE_OF') }} {{ user.username }}</h2>

    <div class="row">
      <div class="col-sm">
        <img class="img-fluid rounded-circle mx-auto d-block" width="150"
             src="{{ base_url('uploads/avatars/' ~ user.avatar) }}" alt="{{ lang('AVATAR') }}">
      </div>
    </div>
  </section>
{% endblock %}
                                    <a href="{{ route('admin/index') }}"><i class="fa fa-cog"></i>&nbsp;Administration</a>&nbsp;&nbsp;-&nbsp;
                                {% endif %}
                            {% else %}
                                <a href="{{ route('auth/login') }}"><i class="fa fa-sign-out"></i>&nbsp;Connexion</a>
                                <a href="{{ route('users/register') }}"><i class="fa fa-sign-out"></i>&nbsp;Inscription</a>
                            {% endif %}
                            {% for sublink in sublinks %}
                                {% if sublink.parent_id == link.id and sublink.is_divider %}
                                    <div class="dropdown-divider"></div>
                                {% elseif sublink.parent_id == link.id %}
                                    <a class="dropdown-item" href="{{ sublink.url }}">{{ sublink.title }}</a>
